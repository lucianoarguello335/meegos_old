<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nombreContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombreContacto"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageTipoAccion"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dm" />

            <TextView
                android:id="@+id/tipoAccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tipoAccion"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageOrigenAccion"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/saliente_icon" />

            <TextView
                android:id="@+id/origenAccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="origenAccion"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/fechaAccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fechaAccion"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtSMS"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>